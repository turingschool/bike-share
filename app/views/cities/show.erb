    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Viewing City: <%= @city.name %></h1>
                <br>
                <h4>Stations</h4>
                    <ul class="list-group">
                    <% @city.stations.each do |station| %>
                        <li class="list-group-item"><a href="/stations/<%= station.id %>"><%= station.name %></a></li>
                    <% end %>
                    </ul>
            </div>
        </div>
    </div>
