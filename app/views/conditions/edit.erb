<form action="/conditions/<%= @condition.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" />
  Date<br>
  <input type='datetime-local'  name='condition[date]' value=<%=@condition.date.strftime("%Y-%m-%dT%H:%M")%> ><br>
  Maximum Temperature<br>
  <input type='number'  name='condition[max_temp]' value=<%=@condition.max_temp%> ><br>
  Minimum Temperature<br>
  <input type='number'  name='condition[min_temp]' value=<%=@condition.min_temp%> ><br>
  Average Temperature<br>
  <input type='number'  name='condition[mean_temp]' value=<%=@condition.mean_temp%> ><br>
  Average Humidity<br>
  <input type='number'  name='condition[mean_humidity]' value=<%=@condition.mean_humidity%> ><br>
  Average Visibility<br>
  <input type='number'  name='condition[mean_visibility]' value=<%=@condition.mean_visibility%> ><br>
  Average Wind Speed<br>
  <input type='number'  name='condition[mean_wind_speed]' value=<%=@condition.mean_wind_speed%> ><br>
  Precipitation<br>
  <input type='number' step=0.01  name='condition[precipitation]' value=<%=@condition.precipitation%> ><br>

  <input type='submit' value='Submit'>
</form>