<body class="stations-show-bg">
  <div class="page-header top">
    <h1 class="title text-left">Edit Weather Condition: <%= @condition.id %></h1>
  </div>

  <div class="container trip-edit">
    <div class="station-box text-center">
      <h2>Edit Weather Conditions:</h2>
      <form action="/conditions/<%= @condition.id %>" method="post">
        <input type="hidden" name="_method" value="PUT"/>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" name="condition[date]" value="<%= @condition.date %>" class="form-control" id="date" placeholder="Date">
        </div>

        <div class="form-group">
          <label for="max_temp">Max Temperature:</label>
          <input type="text" name="condition[max_temp]" value="<%= @condition.max_temp %>" class="form-control" id="max_temp" placeholder="Max Temperature">
        </div>

        <div class="form-group">
          <label for="mean_temp">Mean Temerature:</label>
          <input type="text" name="condition[mean_temp]" value="<%= @condition.mean_temp %>" class="form-control" id="mean_temp" placeholder="Mean Temperature">
        </div>

        <div class="form-group">
          <label for="min_temp">Min Temperature:</label>
          <input type="text" name="condition[min_temp]" value="<%= @condition.min_temp %>" class="form-control" id="min_temp" placeholder="Min Temperature">
        </div>

        <div class="form-group">
          <label for="mean_humidity">Mean Humidity:</label>
          <input type="text" name="condition[mean_humidity]" value="<%= @condition.mean_humidity %>" class="form-control" id="mean_humidity" placeholder="Mean Humidity">
        </div>

        <div class="form-group">
          <label for="mean_visibility">Mean Visibility(in miles):</label>
          <input type="text" name="condition[mean_visibility]" value="<%= @condition.mean_visibility %>" class="form-control" id="mean_visibility" placeholder="Mean Visibility">
        </div>

        <div class="form-group">
          <label for="mean_wind">Mean Wind Speed (mph):</label>
          <input type="text" name="condition[mean_wind]" value="<%= @condition.mean_wind %>" class="form-control" id="mean_wind" placeholder="Mean Wind">
        </div>

        <div class="form-group">
          <label for="precipitation">Precipitation</label>
          <input type="text" name="condition[precipitation]" value="<%= @condition.precipitation %>" class="form-control" id="precipitation" placeholder="Precipitation">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

      </form>
    </div>
  </div>
</body>
