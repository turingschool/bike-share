<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/overwrite.css" rel="stylesheet">
</head>
  <body>
    <nav class="navbar navbar-inverse navbar-sticky-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" id="text" href="/">BikeShare</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <button class="btn btn-primary navbar-btn"><a id="text" href="/stations">Station Index</a></button>
                    </li>
                    <li>
                        <button class="btn btn-primary navbar-btn"><a id="text" href="/cities">City Index</a></button>
                    </li>
                    <li>
                        <button class="btn btn-primary navbar-btn"><a id="text" href="/conditions">Condition Index</a></button>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Conditions Index</h1>
                <% @conditions.each do |condition| %>
                    <ul class="list-group">
                        <li class="list-group-item"><b><a href="condition/<%= condition.id %>"><%= condition.date %></a></b></li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <span>Max Temperature: <%= condition.max_temperature %></span>
                            <br />
                            <span>Mean Temperature: <%= condition.mean_temperature %></span>
                            <br />
                            <span>Min Temperature: <%= condition.min_temperature %></span>
                            <br />
                            <span>Mean Humidity: <%= condition.mean_humidity %></span>
                            <br />
                            <span>Mean Visibility (miles): <%= condition.mean_visibility %></span>
                            <br />
                            <span>Mean Wind Speed (mph): <%= condition.mean_wind_speed %></span>
                            <br />
                            <span>Precipitation (inches): <%= condition.precipitation %></span>

                          </li>
                        <br />
                        <br />
                    </ul>
                <% end %>
            </div>
        </div>
    </div>





  </body>
</html>
