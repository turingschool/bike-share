<div class="page-header">
  <h1 class="title text-right">Conditions</h1><br/>
</div>

<div class="container all-stations">

  <div class="panel">
    <div class="panel-heading stations-panel">Conditions</div>
    <%= will_paginate @conditions %>
    <table class="table table-striped table-hover table-condensed">
      <tr>
        <th>Date</th>
        <th>High Temperature</div></th>
        <th>Low Temperature</th>
        <th>Precipitation</th>
      </tr>

      <% @conditions.each do |condition| %>
        <tr>
          <td><div id="station-id"><a href="/conditions/<%= condition.id %>"><%= condition.date %></div></td>
          <td><%= condition.max_temp %> </td>
          <td><%= condition.min_temp %> </td>
          <td><%= condition.precipitation %></td>
          <td><div id="edit-button"><button type="button"><a href="/conditions/<%= condition.id %>/edit">Edit</a></button></div></td>
          <td>
            <form action="/conditions/<%= condition.id %>" method="post">
              <div class="form-group delete-button">
                <input type="hidden" name="_method" value="DELETE" />
                <input type="submit" value="Delete">
              </div>
            </form>
          </td>
        </tr>
      <% end%>
    </table>
    <%= will_paginate @conditions %>
  </div>
</div>
