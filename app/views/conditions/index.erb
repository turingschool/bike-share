<body class="weather_body">

<h1>Weather Conditions</h1>

<button class="index_buttons">
<a href="/conditions-dashboard">View Weather Stats</a>
</button>
<button class="index_buttons">
<a href="/conditions/new">Create New</a>
</button>


<div class="model_index">
  <% @conditions.each do |condition| %>
    <div class="model_home">
      <p> <a href="/conditions/<%= condition.id %>"> <button> Trip on: <%= condition.date %></button></p></a><br>
      <p>Max Temp: <%= condition.max_temperature_f %></p><br>
      <p>Mean Temp: <%= condition.mean_temperature_f %></p><br>
      <p>Min Temp: <%= condition.min_temperature_f %></p><br>
      <p>Mean Humidity: <%= condition.mean_humidity %></p><br>
      <p>Mean Visibility(in miles): <%= condition.mean_visibility_miles %></p><br>
      <p>Mean Wind Speed (mph): <%= condition.mean_wind_speed_mph %></p><br>
      <p>Precipitation(inches): <%= condition.precipitation_inches %></p><br>
      <p>Zipcode: <%= condition.zip_code %></p>
      <a class="station_button" href="/conditions/<%= condition.id %>/edit">Edit Weather</a>

      <form action="/conditions/<%= condition.id %>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="station_button" value="Delete">
      </form>
    </div>
  <% end %>

</div>

<%= will_paginate @conditions %>


</body>
