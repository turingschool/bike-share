<h1>Condition Index</h1>
<a href="/conditions/new">Add a New Condition</a>

<% @conditions.each do |condition| %>
	<h3><a href="/conditions/<%= condition.id %>"><%= condition.date %></h3>
	<h4>Temperature Range: <%= @condition.min_temperature %> - <%= @condition.max_temperature %></h4>
	<h4>Temperature Average: <%= @condition.mean_temperature %> </h4>
	<p>Humidity Average:<%= @condition.mean_humidity %></p></p>
	<p>Visibility Average: <%= @condition.mean_visibility %></p>
	<p>Wind Speed Average: <%= @condition.mean_wind_speed %></p>
	<p>Precipitation: <%= @condition.precipitation %></p>
	<form action="/conditions/<%= condition.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
