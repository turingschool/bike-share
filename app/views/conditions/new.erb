<!DOCTYPE html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/overwrite.css" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-sticky-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" id="text" href="/">BikeShare</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a id="text" href="/stations"><button class="btn btn-primary navbar-btn">Station Index</button></a>
                    </li>
                    <li>
                        <a id="text" href="/trips"><button class="btn btn-primary navbar-btn">Trip Index</button></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Create New Condition</h1>
                <form action="/conditions" method="post">
                    <label>Date:</label>
                    <input type="text" name="condition[date]">
                    <label>Max Temperature:</label>
                    <input type="text" name="condition[max_temperature]">
                    <label>Mean Temperature:</label>
                    <input type="text" name="condition[mean_temperature]">
                    <label>Min Temperature:</label>
                    <input type="text" name="condition[min_temperature]">
                    <label>Mean Humidity:</label>
                    <input type="text" name="condition[mean_humidity]">
                    <label>Mean Visibility(miles):</label>
                    <input type="text" name="condition[mean_visibility]">
                    <label>Mean Wind Speed(miles):</label>
                    <input type="text" name="condition[mean_wind_speed]">


                    <input type="submit" value="Create Station" />
                </form>
            </div>
        </div>
    </div>



  </body>
</html>
