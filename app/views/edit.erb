<form action="/stations/<%= @station.id %>" method="post">
  <p>Edit</p>
  <input type="hidden" name="_method" value="PUT" />
  <input type='text' name='station[name]' value="<%= @station.name %>"/><br/>
  <input type='text' name='station[dock_count]' value="<%= @station.dock_count %>"/><br/>
  <input type='text' name='station[city]' value="<%= @station.city %>"/><br/>
  <input type='text' name='station[date]' value="<%= @station.date %>"/><br/>
  <input type='submit' value="Submit">
</form>
