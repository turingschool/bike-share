<html lang="en">
  <head>
    <title>Bike Share</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/custom.css">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand -->
        <div class="navbar-header">
          <span class="navbar-brand">Bike Share</span>
        </div>
        <!-- Menu Items -->
        <div>
          <ul class="nav navbar-nav navbar-right">

            <li><a href="/">Home</a></li>

            <!-- Bike Station Dropdown -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle stations" data-toggle="dropdown">Bike Stations <span class="caret"></span></a>
