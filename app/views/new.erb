<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/stylesheets/custom.css">
  </head>
  <body class="new_view">
    <div class="new_form">
      <form action="/stations" method="post">
        <section>
          <input type="text" name="station[name]" placeholder="name"/>
          <br>
          <input type="number" name="station[lat]" placeholder="latitude" step="0.0001"/>
          <br>
          <input type="number" name="station[lng]" placeholder="longitude" step="0.0001"/>
          <br>
          <input type="integer" name="station[dock_count]" placeholder="dock count"/>
          <br>
          <br>
          <input type="date" name="station[installation_date]" placeholder="installation date"/>
          <br>
          <select name="station[city_id]">
            <% @cities.sort_by(&:name).each do |city| %>
            <option value="<%= city.id %>">
              <%= city.name.upcase %>
            </option>
            <% end %>
          </select>
        </section>
        <br>
        <input type="submit" value="submit" />
      </form>
    </div>
  </body>
</html>
