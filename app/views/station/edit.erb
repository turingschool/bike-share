<h2>Edit Station</h2>
<form action = "/stations/<%= @station.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" />

  <label>Name:
    <input type="text" name="station[name]"               value="<%= @station.name %>"/>
  </label><br/>

  <label>Dock Count:
    <input type="number" name="station[dock_count]"       value="<%= @station.dock_count %>"/>
  </label><br/>

  <label>City:
    <input disabled type="text" name="station[city]"      value="<%= @station.city %>"/>
  </label><br/>

  <label>Installation Date:
    <input type="date" name="station[installation_date]"  value="<%= @station.installation_date %>"/>
  </label><br/>

  <label>Latitude:
    <input disabled name="station[lat]"                   value="<%= @station.lat %>"/>
  </label><br/>

  <label>Longetude:
    <input disabled name="station[long]"                  value="<%= @station.long %>"/>
  </label><br/>

  <input type="submit"/>
  <form action = "/stations/<%= @station.id %>" method="post">
    <input type="hidden" name="_method" value="DELETE" />
    <button type="submit" name="delete" value="Delete"> delete </button>
  </form>
</form>
