<form action="/stations/<%= @station.id %>" method="post">
  <h1>Edit</h1>
  <input type="hidden" name="_method" value="PUT" />
  <p>Name: <input type='text' name='station[name]' value="<%= @station.name %>"/></p>
  <p>Dock Count: <input type='integer' name='station[dock_count]' value="<%= @station.dock_count %>"/></p>
  <p>City: <input type='text' name='station[city]' value="<%= @station.city %>"/></p>
  <p>Installation Date: <input type='date' name='station[installation_date]' value="<%= @station.installation_date %>"/></p>
  <p><input type='submit'/></p>
</form>
