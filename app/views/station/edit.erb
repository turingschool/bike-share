<head>
  <link rel="stylesheet" href = "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/station/edit.css">
</head>

<body>
<div class="navbar">
    <div class="nav">
      <a href="/">Home</a>
      <a href="/stations">All Stations</a>
      <a href="/station-dashboard">Station Dashboard</a>
      <a href="/trips-dashboard">Trip Dashboard</a>
      <a href="/condition-dashboard">Condition Dashboard</a>
    </div>
  </div>
</div>

<div class="transbox">
  <form class="form-horizontal" action="/stations/<%= @stations.id %>" method="post">
    <input type="hidden" name="_method" value="PUT" />
    <fieldset>
      <legend>Edit Station</legend>
      <div class="control-group">
        <label class="control-label" />Station Name</label>
        <div class="controls">
          <input type="text" name ="station[name]" value="<%= @stations.name %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label"  />Number of Docks</label>
        <div class="controls">
          <input type="integer" name ="station[dock_count]" value="<%= @stations.dock_count %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" />City</label>
        <div class="controls">
          <input type="text" name ="station[city]" value="<%= @stations.city %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" />Date Installed</label>
        <div class="controls">
          <input type="date" name ="station[installation_date]"  value="<%= @stations.installation_date %>">
        </div>
      </div>
      <br>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-info">Save Changes</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
</body>
