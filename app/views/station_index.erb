

<% @stations.each do |station| %>

  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text"><%= station.name %></h2>
    </div>
    <div class="mdl-card__supporting-text">

      <p>  Dock Count: <%= station.dock_count %> </p>
      <p>  City: <%= City.find(station.city_id).name %> </p>
      <p>  Installation Date: <%= station.installation_date %> </p>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="stations/<%= station.id %>">
        View & Edit
      </a>
    </div>
  </div>

<% end %>
