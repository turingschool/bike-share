<h1>Edit <%= @station.name %> Station:</h1>

<form action="/stations" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <label for="">Name</label>
  <input type="textfield" name="station[name]" value="<%= @station.name %>">
  <label for="">Dock Count</label>
  <input type="textfield" name="station[dock_count]" value="<%= @station.dock_count %>">
  <label for="">City</label>
  <input type="textfield" name="station[city]" value="<%= @station.city %>">
  <label for="">Installation Date</label>
  <input type="textfield" name="station[installation_date]" value="<%= @station.installation_date %>">
  <input type="submit" value="Update Station" />
</form>
