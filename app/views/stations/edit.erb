<div class="edit-background" >
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container navbar-beam">
    </div>
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand nav navbar-nav" href="/">
          <img class="brand-logo" alt="Brand" src="bs.png">
        </a>
        <h1> EDIT: <%= @station.name %>? </h1>
      </div>
    <div>
      <a class="nav navbar-nav navbar-right" href="/station-dashboard">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
      </a>
      <a class="nav navbar-nav navbar-right" href="/stations">
        <h3 class="back-to-index">Back to Stations</h3>
      </a>
    </div>
    </div>
  </nav>
<div class="container container-body">
<form class="edit-form" action="/stations/<%= @station.id %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="PUT" />
    <label class="entry_title">Name:</label>
    <input type="text" name="station[name]" value="<%= @station.name %>">
  </div>
  <div class="form-group">
    <label class="entry_title">Dock Count:</label>
    <input type="number" name="station[dock_count]" value="<%= @station.dock_count %>">
  </div>
  <div class="form-group">
    <label class="entry_title">City: </label>
    <input type="text" name="station[city]" value="<%= @station.city %>">
  </div>
  <div class="form-group">
    <label class="entry_title">Installation Date: </label>
    <input class="input_installation" type="date" name="station[installation_date]" value="<%= @station.installation_date %>">
  </div>
  <button class="btn btn-warning" type="submit">Submit Changes</button>
</form>
</div>
</div>
