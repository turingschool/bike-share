<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Edit <%= @station.name %></h1>
            <form action="/stations/<%= @station.id %>" method="post">
            <input type="hidden" name="_method" value="PUT" />
                <label>Name:</label>
                <input type="text" name="station[name]">
                <label>Dock Count:</label>
                <input type="text" name="station[dock_count]">
                <label>City:</label>
                <select class="city-selector" name="station[city_id]">
                    <% @cities.each do |city| %>
                        <option value="<%= city.id %>">
                            <%= city.name %>
                        </option>
                        <% end %>
                </select>
                <label>Installation Date:</label>
                <input type='text' name='station[date]' value="<%= @station.installation_date %>" />
                <br/>
                <br>
                <input type='submit' value="Update Station">
            </form>
        </div>
    </div>
</div>