      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div>
    <h1>Update Station</h1>
  </div>

  <div>
  <form action="/stations/<%= @station.id %>" method="POST">

    <div>
      <input type="hidden" name="_method" value="PUT"/>
    </div>

    <div class=row>
      <h4>Name:</h4>
      <input type="text" name="station[name]" value="<%= @station.name %>"/><br>
    </div>

    <div class="row">
      <h4>Dock Count:</h4>
      <input type="integer" name="station[dock_count]" value="<%= @station.dock_count %>"/><br>
    </div>

    <div class="row">
      <h4>Installation Date:</h4>
      <input type="date" name="station[installation_date]" value="<%= @station.installation_date %>"/><br>
    </div>

    <div class="row">
            <h4 for="city">City:</h4>
            <select name="city" value="<%= @station.city.city %>">
              <% @cities.each do |city| %>
                <option><%= city.city %></option>
              <% end %>
            </select>
            <h4>Current city: <%= @station.city.city %></h4>
    </div>

    <div class="spacer">
      <button type="submit" class="btn btn-success">Submit</button>
      <a href="/stations/"><button class="btn btn-danger">Cancel</button></a>
    </div>

  </form>
  </div>

  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="js/bootstrap.min.js"></script>

</body>



