<h1>Edit <%= @station.name %> Station:</h1>

<form action="/stations/<%= @station.id %>" method="POST" class="container">
  <input type="hidden" name="_method" value="PUT"  />
  <div class="row">
    <div class="col-md-6 mb-1">
      <label>Name: </label>
      <input type="text" class="form-control" name="station[name]" value="<%= @station.name %>"/>
    </div>
    <div class="col-md-5 mb-1">
      <label>Dock Count: </label>
      <input type="text" class="form-control" name="station[dock_count]" value="<%= @station.dock_count %>"/>
    </div>
    <div class="col-md-4 mb-1">
      <label>City: </label>
      <input type="text" class="form-control" name="station[city]" value="<%= @station.city %>"/>
    </div>
    <div class="col-md-3 mb-1">
      <label>Installation Date: </label>
      <input type="text" class="form-control" name="station[installation_date]" value="YYYY-MM-DD"/>
      <div class="invalid-feedback">
        Please provide a date in the correct format.
      </div>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Update Station</button>
</form>
