<h1>All Bike Stations</h1>

<%= will_paginate @stations, renderer: BootstrapPagination::Sinatra %>

<% @stations.each do |station| %>
<div class=well>
  <a href="/stations/<%=station.id%>"><h4>Station Name: <%= station.name %></h4></a>
  <p>City: <%= station.city.name %></p>
  <p>Dock Count: <%= station.dock_count %></p>
  <p>Installation Date: <%= station.installation_date.strftime("%B %d, %Y")%></p>
</div>
<% end %>

<%= will_paginate @stations, renderer: BootstrapPagination::Sinatra %>
