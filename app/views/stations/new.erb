<h1>Add Station</h1>

<form action='/stations/new' method='post'>
  Name: <input type="textfield" name='station[name]' value="<%= @station.errors[:name][0] || @station.name %>" /><br/>
  <br/>Number of Docks: <input type="textfield" name='station[dock_count]' value="<%= @station.errors[:dock_count][0] || @station.dock_count %>" /><br/>
  <br/>City: <input type="textfield" name='city' value="<%= @city.errors[:name][0] || @city.name %>" /><br/>
   <br/>Install Date: <input type="textfield" name='station[install_date]' value="<%= @station.errors[:install_date][0] || @station.install_date %>" /><br/>
  <input type="submit" value="Add Station" />
</form>
