<div class="page-header top">
  <h1 class="title text-left">Create a New Station</h1><br/>
</div>

<div class="container new-station" >
    <form class="form-horizontal" action="/stations" method="post">
      <div class="form-group" id="form-group">
        <label for="name" class="col-sm-2 control-label">Name:</label>
        <div class="col-sm-10">
          <input type="textfield" class="form-control" id="name" placeholder="Enter name for station" name="station[name]">
        </div>
      </div>
      <div class="form-group">
        <label for="dock_count" class="col-sm-2 control-label">Dock count:</label>
        <div class="col-sm-10">
          <input type="textfield" id="dock_count" class="form-control" placeholder="Enter number of dock counts to be registered" name="station[dock_count]">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="installation_date">Installation Date:</label>
        <div class="col-sm-10">
          <input type="date" id="installation_date" class="form-control" name="station[installation_date]">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="City">City:</label>
        <div class="col-sm-10">
          <select name="station[city_id]" id="City">
            <% @city.each do |city| %>
                  <option value=<%= city.id %>>
                <%= city.name %>
              </option>
                <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <input class="btn btn-primary" type="submit" value="Create New Station" />
        </div>
      </div>
    </form>
  </div>