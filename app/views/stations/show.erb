<div class="jumbotron">
  <h1><%= @station.name %></h1>
</div>
<div class="table-responsive">
  <table class="table text-left">
    <tr>
      <th>Dock Count</th>
      <th>City</th>
      <th>Installation Date</th>
      <th>Edit</th>
      <th>Delete<th>
    </tr>
    <tr>
      <td><%= @station.dock_count %></td>
      <td><%= @station.city %></td>
      <td><%= @station.installation_date %></td>
      <td>
        <form action="/stations/<%= @station.id %>/edit" method="get">
          <button type="submit" class="btn btn-primary btn active" role="button" aria-pressed="true" value="edit">Edit</a>
        </form>
      </td>

      <td>
        <form action="/stations/<%= @station.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-primary btn active" role="button" aria-pressed="true" value="delete">Delete</a>
        </form>
      </td>
    </tr>
  </table>
</br>
  <h3>Metrics</h3>
  <p><strong># Origination Rides: </strong><%=@station.origination_rides(params[:id])%></p>
  <p><strong># Destination Rides: </strong><%=@station.destination_rides(params[:id])%></p>
  <p><strong>Most Frequent Ride Destination: </strong><%=@station.most_frequent_destination(params[:id]) %><p>
  <p><strong>Most Frequent Ride Origination: </strong><%=@station.most_frequent_origination(params[:id]) %></p>
  <p><strong>Date of Most Rides: </strong><%=@station.date_of_most_rides(params[:id]) %></p>
  <p><strong>Most Frequent User Zip Code: </strong><%=@station.most_frequent_user_zip(params[:id]) %></p>
  <p><strong>Most Frequent Bike ID: </strong><%=@station.most_frequent_bike(params[:id]) %></p>
</div>
