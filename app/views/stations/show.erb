<h1><%= @station.name %></h1>

<h2>Info</h2>
<p>Dock Count: <%= @station.dock_count%></p>
<p>Installation Date: <%= @station.date_ref.name %></p>
<p>City: <%= @station.city.name %></p>
<input class="button_active" onclick="location.href='/stations/<%= @station.id %>/edit';" type="button" value="Edit">
<form action="/stations/<%= @station.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
