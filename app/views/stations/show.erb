<h1><%= @station.name %><h1>
<hr size=10px>

<h3>Info</h3>
<hr>

<p>Dock Count: <%=@station.dock_count%></p>
<p>City: <%=@station.city%></p>
<p>Installation Date: <%=@station.installation_date%></p>


<a href='/stations/<%=@station.id%>/edit'>Edit</a><br/>

<form action='/stations/<%=@station.id%>' method='POST'>
  <input type='hidden' name='_method' value='DELETE'>
  <input type='submit' value='Remove Station'/>
</form><br/>

<a href='/stations'>Back to All Stations</a>
