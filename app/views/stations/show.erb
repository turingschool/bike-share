        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Viewing Station: <%= @station.name %></h1>
                <br>
                    <ul class="list-group">
                        <li class="list-group-item">City:
                            <a href="/cities/<%= @station.city_id %>">
                                <%= @station.city.name %>
                            </a>
                        </li>
                        <li class="list-group-item">Dock Count:
                            <%= @station.dock_count %>
                        </li>
                        <li class="list-group-item">Installation Date:
                            <%= @station.installation_date %>
                        </li>
                    </ul>
                        <form action="/stations/<%= @station.id %>" method="post">
                            <input type="hidden" name="_method" value="DELETE" />
                            <input type="submit" value="Delete" />
                        </form>
                        <form action="/stations/<%= @station.id %>/edit">
                            <input type="submit" value="Edit" />
                        </form>
            </div>
        </div>
    </div>