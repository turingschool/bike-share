<div>
  <h1><%= @station.name %></h1>
</div>

<div>
    <ul>
    <li>City: <%= @station.city.city %></li>
    <li>Dock Count: <%= @station.dock_count %></li>
    <li>Installation Date: <%= @station.installation_date.inspect %></li>
  </ul>
</div>

<div class="container">
  <div class="text-center">
  <a class="btn btn-warning" href="/stations/<%= @station.id %>/edit">
    <i class="glyphicon glyphicon-pencil"></i>
      Edit</a><br></br>

    <form action="/stations/<%= @station.id %>" class="delete-form" method="POST">
      <input name="_method" type="hidden" value="DELETE"/>
      <input class="btn btn-danger" type="submit" value="Delete"/>
    </form>
  </div>
</div>

<a href='/stations'>All Stations</a>