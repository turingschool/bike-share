<h1>Edit Trip</h1>

<form action="/trips/<%=@trip.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" />
<label for="">Duration:</label>
  <input type="textfield" name="trip[duration]" value="<%= @trip.duration %>"><br>
  <label for="">Start Date:</label>
  <input type="textfield" name="trip[start_date]" value="<%= @trip.start_date %>"><br>
  <label for="">Start Station Name:</label>
  <input type="textfield" name="trip[start_station_name]" value="<%= @trip.start_station_name%>"><br>
  <label for="">End Date:</label>
  <input type="textfield" name="trip[end_date]" value="<%= @trip.end_date%>"><br>
  <label for="">End Station Name:</label>
  <input type="textfield" name="trip[end_station_name]" value="<%= @trip.end_station_name %>"><br>
  <label for="">Bike ID:</label>
  <input type="textfield" name="trip[bike_id]" value="<%= @trip.bike_id %>"><br>
  <label for="">Subscription Type:</label>
  <input type="textfield" name="trip[subscription_type_id]" value="<%= @trip.subscription_type_id %>"><br>
  <label for="">Zip Code:</label>
  <input type="textfield" name="trip[zip_code]" value="<%= @trip.zip_code %>"><br>
  <input type="submit" value="Update Trip"/>
</form>
