<h2>All Trips</h2>
<div>
    <% @trips.each do |trip| %>

      <p> Duration: <%= trip.duration%></p>
      <p> Start Date: <%= trip.start_date%></p>
      <p> Starting Station: <%= trip.start_station%></p>
      <p> End Date: <%= trip.end_date%></p>
      <p> Ending Station: <%= trip.end_station%></p>
      <p> Bike ID: <%= trip.bike_id%></p>
      <p> Subscription Type: <%= trip.subscription_type%></p>
      <p> Zip Code: <%= trip.zip_code%></p>

      <a href="/trips/<%=trip.id%>">EDIT OR DELETE TRIP</a>
    <% end %>

<%= will_paginate @trips %>

</div>
