<h1>All Trips</h1>
<form action="/trips/new" method="GET">
  <input type="hidden" name="_method" value="POST">
  <input type="submit" value="post"/>
</form>

<ul>

<% @trips.each do |trip|%>
	<h3> Dates: <a href = "/trips/<%=trip.id %>"><%=trip.start_date%> to <%= trip.end_date%></a></h3> 
	<p>Duration: <%=trip.duration %> seconds</p>
	<p>Stations: <%=trip.start_station_name%> -> <%= trip.end_station_name%></p>
	<p>Bike ID: <%=trip.bike_id%></p>
	<p>Subscription Type: <%=trip.subscription_type%></p>
	<form action="/trips/<%= trip.id %>/edit" method="GET">
    <input type="hidden" name="_method" value="EDIT">
    <input type="submit" value="edit"/>
  </form>
  <form action="/trips/<%= trip.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
	<% end %>
</ul>
<%= will_paginate(@trips)%>
