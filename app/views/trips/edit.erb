<h1>Create a New Trip</h1>

<div class="container">
  <form action="/trips/<%= @trip.id %>" method="post">
    <p>Edit This Trip</p>
    <input type="hidden" name="_method" value="PUT"/>
    <div class="form-group">
      <label for="duration">Duration</label>
      <input type="number" name="trip[duration]" value="<%= @trip.duration %>" class="form-control" id="duration" placeholder="Duration">
    </div>

    <div class="form-group">
      <label for="start_date">Start Date:</label>
      <input type="date" name="trip[start_date]" value="<%= @trip.start_date %>" class="form-control" id="start_date" placeholder="Start Date">
    </div>

    <div class="form-group">
      <label for="start_station">Starting Station:</label>
      <input type="number" name="trip[start_station_id]" value="<%= @trip.start_station_id %>" class="form-control" id="start_station" placeholder="Start Station">
    </div>

    <div class="form-group">
      <label for="end_date">End Date:</label>
      <input type="date" name="trip[end_date]" value="<%= @trip.end_date %>" class="form-control" id="end_date" placeholder="End Date">
    </div>

    <div class="form-group">
      <label for="end_station">Destination Station:</label>
      <input type="number" name="trip[end_station_id]" value="<%= @trip.end_station_id %>" class="form-control" id="end_station" placeholder="End Station">
    </div>

    <div class="form-group">
      <label for="bike_id">Bike ID:</label>
      <input type="number" name="trip[bike_id]" value="<%= @trip.bike_id %>" class="form-control" id="bike_id" placeholder="Bike ID">
    </div>

    <div class="form-group">
      <label for="subscription_type_id">Subscription Type ID:</label>
      <input type="number" name="trip[subscription_type_id]" value="<%= @trip.subscription_type_id %>" class="form-control" id="subscription_type_id" placeholder="Subscription Type">
    </div>

    <div class="form-group">
      <label for="zip_code_id">Zip Code ID:</label>
      <input type="number" name="trip[zip_code_id]" value="<%= @trip.zip_code_id %>" class="form-control" id="zip_code_id" placeholder="Zip Code">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>