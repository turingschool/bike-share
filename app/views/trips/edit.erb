<input type="text" name="trip[end_date]" value="<%= @trip.end_date %>" id="end_date"></br>
<label for="end_station">End Station<br/></br>
<input type="text" name="trip[end_station]" value="<%= @trip.end_station_name %>" id="end_station"></br>
