<div class="page-header top">
  <h1 class="title text-left">Trips</h1><br/>
</div>

<div class="container all-trips">

  <div class="panel">
    <div class="panel-heading stations-panel">All Trips</div>
    <%= will_paginate @trips %>
    <table class="table table-striped table-hover table-condensed">
      <tr>
        <th>Trip Start Date</th>
        <th>Trip Duration</th>
        <th>Trip Start Station</th>
        <th>Trip End Station</th>
        <th>Bike ID</th>
        <th>Edit Info</th>
        <th>Delete Trip</th>
      </tr>

      <% @trips.each do |trip| %>
        <tr>
          <td><div id="trip-start-date"><a href="/trips/<%= trip.id %>"><%= trip.start_date %></a></div></td>
          <td><%= trip.duration %> minutes</td>
          <td><%= trip.start_station.name %></td>
          <td><%= trip.end_station.name %></td>
          <td><%= trip.bike.bike_number %></td>
          <td><div id="edit-button"><button type="button"><a href="/trips/<%= trip.id %>/edit">Edit</a></button></div></td>
          <td>
            <form action="/trips/<%= trip.id %>" method="post">
              <div class="form-group delete-button">
                <input type="hidden" name="_method" value="DELETE" />
                <input type="submit" value="Delete">
              </div>
            </form>
          </td>
        </tr>
      <% end%>
    </table>
    <%= will_paginate @trips %>
  </div>
</div>
