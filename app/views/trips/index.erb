<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container navbar-beam">
  </div>
  <div class="container-fluid navbar-spacing">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        <img class="brand-logo" alt="Brand" src="bs.png">
      </a>
      <h1>Trips Index</h1>
    </div>
    <div>
    <a class="nav navbar-nav navbar-right" href="/trip-dashboard">
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    </a>
    </div>
  </div>
</nav>
<div class="index-pages">
  <h3 class="create-new"><a href="/trips/new">Create New Trip</a></h3>
  <div class="index-pages-inner">
  <%= will_paginate @trips %>
  <table>
    <tr>
      <th>Duration</th>
      <th>Start Date</th>
      <th>Start Station</th>
      <th>End Date</th>
      <th>End Station</th>
      <th>Bike ID</th>
      <th>Subscription Type</th>
      <th>Zip Code</th>
    </tr>

    <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.duration %></td>
      <td><%= trip.start_date.date %></td>
      <td><%= trip.start_station.name %></td>
      <td><%= trip.end_date.date  %></td>
      <th><%= trip.end_station.name %></th>
      <th><%= trip.bike_id %></th>
      <th><%= trip.subscription_type %></th>
      <th><%= trip.zipcode.zipcode %></th>

      <td><a href="/trips/<%= trip.id %>">Trip Info</a></td>

        <td>
        <form class="" action="/trips/<%= trip.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" name="" value="delete">
        </form>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @trips %>
  </div>
</div>
</body>
