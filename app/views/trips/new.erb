<h1>Add a new trip:</h1>

<form action="/trips/new" method="POST" class="container" id="needs-validation" novalidate>
  <div class="row">
    <div class="col-md-6 mb-1">
      <label for="validationCustom01">Duration: </label>
      <input type="text" class="form-control" id="validationCustom01" placeholder= "trip[duration]" value="How long was the trip (in seconds)?" required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom02">Start Date: </label>
      <input type="text" class="form-control" id="validationCustom02" placeholder="trip[start_date]" value="YYYY-MM-DD" required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom03">Start Station Name: </label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="trip[start_station_name]" value="Name of the station trip started at" required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom04">End Date: </label>
      <input type="text" class="form-control" id="validationCustom04" placeholder="trip[end_date]" value="YYYY-MM-DD"required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom05">End Station Name: </label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="trip[end_station_name]" value="Name of the station trip ended at" required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom06">Bike ID: </label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="trip[bike_id]" value="Bike ID on this trip" required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom07">Subscription Type: </label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="trip[subscription_type]" value="Subscriber or Customer" required>
    </div>
    <div class="col-md-6 mb-1">
      <label for="validationCustom08">Zip Code: </label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="trip[zip_code]" value="5 digit zip code" required>
    </div>
  </div>
  <button class="btn btn-success" type="submit">Create New Trip</button>
</form>
