<div class="row newshoweditrow">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <div class="left-pane">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">Add a Bike Trip</h1>
        </div>
        <h4>Please be sure all fields are filled out correctly.</h4>
        <div class="row">
          <div class="col-md-6">
                <form action="/trips" method="post">
                  <fieldset>
                    Duration:<br>
                    <input type='text' name='trip[duration]'><br/>
                    Start Date:<br>
                    <input type='text' name='trip[start_date]'><br/>
                    Start Station ID:<br>
                    <input type='integer' name='trip[start_station_id]'><br/>
                    End Date:<br>
                    <input type='text' name='trip[end_date]'><br/>
                    End Station ID:<br>
                    <input type='integer' name='trip[end_station_id]'><br/>
                  </div>
                  <div class="col-md-6">
                    Bike ID:<br/>
                    <input type='text' name='trip[bike_id]'><br/>
                    Subscription Type:<br>
                    <select name="trip[subscription_type_id]">
                      <option value="<%= SubscriptionType.first.id.to_i %>"><%= SubscriptionType.first.subscription_type %></option>
                      <option value="<%= SubscriptionType.last.id.to_i %>"><%= SubscriptionType.last.subscription_type %></option>
                      <option><%= SubscriptionType.last.id %></option>
                    </select><br>
                    Zip Code:<br>
                    <input type='text' name='trip[zip_code]'><br/><br>
                    <input class="btn btn-primary formbtn" type="submit" value="Submit">
                  </fieldset>
                </form>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
