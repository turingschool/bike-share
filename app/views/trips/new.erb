
<title>New Trip</title>

<h1>New Trip</h1>

<form action="/trips" method="post">
  <p>Create A New Trip</p>
  Starting Station<select name="trip[start_station_id]">
    <% @start_stations.each do |start_station| %>
    <option value="<%= start_station.id %>"><%= start_station.station.name %></option>
    <% end %>
  </select><br>
  Ending Station<select name="trip[end_station_id]">
    <% @end_stations.each do |end_station| %>
    <option value="<%= end_station.id %>"><%= end_station.station.name %></option>
    <% end %>
  </select><br>
  Zipcode<input type="integer" name="trip[zip_code]"/><br>
  Bike ID<input type="integer" name="trip[bike_id]"/><br>
  Duration<input type="number" name="trip[duration]"/><br>
  Start Date<input type="date" name="trip[start_date]"/><br>
  End Date<input type="date" name="trip[end_date]"/><br>
  Subscription Type<select name="subscription_type[name]">
    <% @subscription_types.each do |subscription_type| %>
    <option value="<%= subscription_type.name %>"><%= subscription_type.name %></option>
    <% end %>
  </select><br>
  <input type="submit" value="Submit"/>
</form>
