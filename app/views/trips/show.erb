<h1>Edit Trip</h1>

  <form action="/trips/<%= @trip.id %>" method="post"class="pure-form pure-form-aligned">
    <input type="hidden" name="_method" value="PUT" />

    <fieldset>

        <div class="pure-control-group">
        <label for="start_date">Start Date: </label>
        <input name="trip[start_date]" type="datetime-local" value="<%= @trip.start_date.strftime('%Y-%m-%dT%H:%M')%>" required>
        </div>

        <div class="pure-control-group">
            <label for="start_station">Start Station: </label>
            <select name="trip[start_station_id]" required>
            <% @stations.each do |station| %>
                <option <%= selected="selected" if station.id == @trip.start_station_id %>  value="<%=station.id%>"><%=station.name%></option>
              <% end %>
            </select>
        </div>

        <div class="pure-control-group">
            <label for="end_date">End Date: </label>
            <input name="trip[end_date]" type="datetime-local" value="<%= @trip.end_date.strftime('%Y-%m-%dT%H:%M')%>" required>
        </div>

        <div class="pure-control-group">
            <label for="end_station_id">End Station: </label>
            <select name="trip[end_station_id]" required>
            <% @stations.each do |station| %>
                <option <%= selected="selected" if station.id == @trip.end_station_id %> value="<%=station.id%>"><%=station.name%></option>
            <% end %>
            </select>
        </div>

        <div class="pure-control-group">
            <label for="bike_id">Bike ID: </label>
            <input name="trip[bike_id]" type="number" value="<%=@trip.bike_id%>" required>
        </div>

         <div class="pure-control-group">
            <label for="subscription">Subscription Type: </label>
            <select name="trip[subscription_type]" required>
            <option <%= selected="selected" if @trip.subscription_type == "Subscriber" %> value="Subscriber">Subscriber</option>
            <option <%= selected="selected" if @trip.subscription_type == "Customer" %> value="Customer">Customer</option>
            </select>
        </div>

        <div class="pure-control-group">
            <label for="zip">Zipcode: </label>
            <input name="trip[zipcode]" type="text" pattern="[0-9]{5}" value="<%=@trip.zipcode%>">
        </div>

        <div class="pure-controls">
            <label for="cb" class="pure-checkbox"></label>
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Submit</button>
        </div>
    </fieldset>
</form>

<form action="/trips/<%= @trip.id %>" method="post" class="pure-form pure-form-aligned">
  <input type="hidden" name="_method" value="DELETE" />
  <div class="pure-controls">
    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised  mdl-js-ripple-effect mdl-button--accent">Delete</button>
  </div>

</form>
