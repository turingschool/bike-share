    <header>
      <h1>Make a trip</h1>
    </header>
    <div class="spacer">
      <form action="/trips" method="post">
        <div class="row forminput">
          <h4>Duration in minutes:</h4> <input type='text' name='duration'>
        </div>

        <div class="row forminput">
          <h4>Trip date:</h4> <input type='text' name='trip_date'>
        </div>

        <div class="row forminput">
          <h4>Start station:</h4> <input type='text' name='start_station'><
        </div>

        <div class="row forminput">
          <h4>End station:</h4> <input type='text' name='end_station' ><
        </div>

        <div class="row forminput">
          <h4>Bike id:</h4> <input type='text' name='bike_id'>
        </div>

        <div class="row forminput">
          <h4>Subscription type:</h4> <input type='text' name='subscription_type'>
        </div>

        <div class="row forminput">
          <h4>Zip code:</h4> <input type='text' name='zip_code'>
        </div>

        <a href="/trips"><button class="btn btn-danger">Cancel</button></a>

