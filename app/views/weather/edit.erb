
<div class="page-header top">
  <h1 class="title text-left">Edit Trip Weather</h1><br/>
</div>

<h2>Weather:
    <%= @weather.id %>
</h2>

<form action="/conditions/<%= @weather.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <label for="">Maximum Temperature (deg F):</label>
  <input type="float" name="weather[max_temperature]" value="<%= @weather.max_temperature %>"
  <label for="">Average Temperature (deg F):</label>
  <input type="float" name="weather[mean_temperature]" value="<%= @weather.mean_temperature %>"
  <label for="">Minimum Temperature (deg F):</label>
  <input type="float" name="weather[min_temperature]" value="<%= @weather.min_temperature %>"
  <label for="">Average Humidity (percentage):</label>
  <input type="float" name="weather[mean_humidity]" value="<%= @weather.mean_humidity %>"
  <label for="">Average Visibility (miles):</label>
  <input type="float" name="weather[mean_visibility]" value="<%= @weather.mean_visibility %>"
  <label for="">Average Wind Speed (mph):</label>
  <input type="float" name="weather[mean_wind_speed]" value="<%= @weather.mean_wind_speed %>"
  <label for="">Precipitation (inches):</label>
  <input type="float" name="weather[precipitation]" value="<%= @weather.precipitation %>"
  <label for="">Date:</label>
  <input type="date" name="weather[date_ref_id]" value="<%= @weather.date_ref.date %>">
  <input type="submit" value="Edit Weather"/>
</form>

<% if params['errors'] %>
<%= erb :'errors/error'%>
<%end%>
