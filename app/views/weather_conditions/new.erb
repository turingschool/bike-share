<body>
  <div class="new-background">
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container navbar-beam">
      </div>
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">
            <img class="brand-logo" alt="Brand" src="/bs.png"/>
          </a>
          <h1>Add Weather Information</h1>
        </div>
        <div>
          <a class="nav navbar-nav navbar-right" href="/weather-dashboard">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
          </a>
          <a class="nav navbar-nav navbar-right" href="/weather_conditions">
            <h3 class="back-to-index">Back to Weather Condition's</h3>
          </a>
        </div>
      </div>
    </nav>
    <div class="container container-body">
      <form class="edit-form-left" action="/weather_conditions" method="post">
        <div class="form-group">
          <label class="entry_title">Date: </label>
          <input type="date" name="weather_conditions[date_id]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Maximum Temperature: </label>
          <input type="number" name="weather_conditions[max_temp_f]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Mean Temperature: </label>
          <input type="number" name="weather_conditions[mean_temp_f]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Minimum Temperature: </label>
          <input type="number" name="weather_conditions[min_temp_f]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Mean Humidity: </label>
          <input type="number" name="weather_conditions[mean_humidity]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Mean Visibility: </label>
          <input type="number" name="weather_conditions[mean_visibility]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Mean Wind Speed: </label>
          <input type="number" name="weather_conditions[mean_wind_speed]" value="">
        </div>
        <div class="form-group">
          <label class="entry_title">Precipitation: </label>
          <input type="number" name="weather_conditions[precipitation]" value="">
        </div>
        <button class="btn btn-warning" type="submit" name="button">Add Weather Condition</button>
      </form>
    </div>
  </div>
</body>
