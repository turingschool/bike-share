<% @weathers.each do |weather| %>

  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">Weather ID: <%= weather.id %></h2>
    </div>
    <div class="mdl-card__supporting-text">

    <p> Date: <%= weather.date %></p>
    <p> Max Temperature: <%= weather.max_temperature %></p>
    <p> Minimum Temperature: <%= weather.min_temperature %></p>
    <p> Average Temperature: <%= weather.mean_temperature %></p>
    <p> Avg Humidity: <%= weather.mean_humidity %></p>
    <p> Average Visibility: <%= weather.mean_visibility %></p>
    <p> Wind Speed: <%= weather.mean_wind_speed %></p>
    <p> Precipitation: <%= weather.precipitation %></p>
    </div>
        <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="conditions/<%= weather.id %>">View & Edit</a>
      <form action="/conditions/<%= weather.id %>" method="post">
       <input type="hidden" name="_method" value="DELETE" />
      <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Delete</button>
      </form>
    </div>
  </div>

<% end %>

<%= will_paginate @weathers %>
